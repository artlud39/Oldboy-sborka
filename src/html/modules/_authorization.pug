div.authorization
  form.authorization__form(action="")
    fieldset.authorization__fieldset
      legend.authorization__legend Пожалуйста, авторизуйтесь:
      div.authorization__item
        label.authorization__label(for="user-login") Введите логин
        input.authorization__input(type="text" name="login" id="user-login")
      div.authorization__item
        label.authorization__label(for="user-pass") Пароль
        input.authorization__input(type="text" name="password" id="user-pass")
      div.authorization__item
        label.authorization__label.authorization__label--checkbox(for="user-remember")
          span.authorization__span Запомнить меня на этом компьютере
        input.authorization__input-checkbox.visually-hidden(type="checkbox" name="user-remember" id="user-remember" checked)
      div.authorization__item
        button.authorization__submit.button(type="submit") Войти
      div.authorization__item
        a.authorization__forgot Забыли свой пароль?



  div.authorization__deco
    div.authorization__logo
      img.authorization__img(src="images/deco/logo-authorization.svg", alt="Oldboy Barbershop крупнейшая международная сеть мужских парикмахерских")

